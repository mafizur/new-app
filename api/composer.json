{
    "name": "tuupola/slim-api-skeleton",
    "description": "Slim 3 + Spot + Monolog API skeleton",
    "type": "project",
    "keywords": [
        "slim",
        "skeleton"
    ],
    "homepage": "https://github.com/tuupola/slim-api-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "http://www.appelsiini.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "slim/slim": "^3.0",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^2.0",
        "symfony/console": "^2.7",
        "vlucas/spot2": "^2.1",
        "tuupola/slim-jwt-auth": "^2.0",
        "tuupola/slim-basic-auth": "^2.0",
        "league/fractal": "^0.13.0",
        "paragonie/random_compat": "^1.2",
        "tuupola/cors-middleware": "^0.5.0",
        "micheh/psr7-cache": "^0.5.0",
        "gofabian/negotiation-middleware": "^0.1.2",
        "tuupola/base62": "^0.5.0",
        "slim/pdo": "^1.10",
        "martynbiz/slim3-controller": "^0.0.0",
        "chadicus/slim-oauth2": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "lib/App/",
            "Utils\\": "lib/Utils/",
            "Doctrine\\DBAL\\Logging\\": "lib/Doctrine/DBAL/Logging/",
            "Exception\\": "lib/Exception/",
            "Slim\\Handlers\\": "lib/Slim/Handlers/",
            "Slim\\Middleware\\": "lib/Slim/Middleware/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5"
    }
}
